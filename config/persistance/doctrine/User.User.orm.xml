<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        https://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    
    <entity name="App\Core\Domain\Model\User\User">
        <field name="email" type="string" length="190" />
        <field name="firstname" type="string" length="190" />
        <field name="lastname" type="string" length="190" />
        <field name="roles" type="json" />
        <field name="password" type="string" length="190" />
        <field name="active" type="boolean" />

        <one-to-many field="userPortfolios" 
            target-entity="App\Core\Domain\Model\User\UserPortfolio" 
            mapped-by="user" 
            orphan-removal="true" />
    </entity>

</doctrine-mapping>